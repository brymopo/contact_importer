<h1> My uploaded files </h1>

<button class="btn btn-sm btn-primary">
  <%= link_to "Import new CSV file", new_csv_file_path, class:"text-light" %>
</button>

<table class="table my-3">
  <thead class="thead-dark">
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Owner ID</th>
      <th scope="col">Updated on</th>
      <th scope="col">Status</th>
    </tr>
  </thead>
  <tbody>
    <% @csv_files.each do |csv_files| %>
      <tr>
        <th scope="col">
          <%= csv_files.id %>
        <th scope="col">
          <%= csv_files.user.id %>
        </th>
        <th scope="col">
          <%= csv_files.created_at %>
        </th>
        <th scope="col">
          <%= csv_files.aasm_state %>
        </th>        
      <tr>
    <% end %>
  </tbody>
</table>


<%= will_paginate @csv_files %>